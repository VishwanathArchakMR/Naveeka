# =====================================
# Server Config
# =====================================
PORT=3000
NODE_ENV=development
# Log level hint (info|warn|error); app may default internally
LOG_LEVEL=info
# Enable/disable upload routes globally (true/false)
ENABLE_UPLOADS=true

# =====================================
# Database (MongoDB)
# =====================================
# Replace with your connection string; prefer secrets outside VCS
MONGODB_URI=mongodb+srv://vishwanath05122006:v0qkxSlH4WTaHJSp@vishwa.lap5bfd.mongodb.net/?retryWrites=true&w=majority&appName=vishwa
# Optional tuning (keep defaults unless needed)
MONGO_MAX_POOL_SIZE=20
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=45000

# =====================================
# JWT Auth
# =====================================
# Use a strong, random value in production
JWT_SECRET=change-me-in-production
# Examples: 7d, 12h, 60m
JWT_EXPIRES_IN=7d

# =====================================
# CORS (Allowed Origins)
# Multiple origins separated by commas; credentials are enabled server-side
# If CORS_ORIGINS is empty, FRONTEND_URL acts as fallback allowlist
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =====================================
# Rate Limiting
# =====================================
# 15 minutes in ms
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window per IP
RATE_LIMIT_MAX=200

# =====================================
# Cloudinary (required if ENABLE_UPLOADS=true)
# =====================================
CLOUDINARY_CLOUD_NAME=<your_cloudinary_cloud_name>
CLOUDINARY_API_KEY=<your_cloudinary_api_key>
CLOUDINARY_API_SECRET=<your_cloudinary_api_secret>

# Optional media scoping for uploads/signatures/deletions
MEDIA_BASE_FOLDER=naveeka
# If true, assets go into "<BASE>/<NODE_ENV>" (e.g., naveeka/development)
MEDIA_APPEND_ENV=false

# =====================================
# AI Configuration (Chat/Journeys stubs)
# =====================================
# Provider: mock | openai | huggingface
AI_PROVIDER=mock
# Only for openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# Only for huggingface
HUGGINGFACE_API_KEY=

# =====================================
# Business Rules
# =====================================
# Example: auto-approve partner submissions in non-prod
PARTNER_AUTO_APPROVE=false

# =====================================
# Maps (optional; used by mapService if enabled)
# =====================================
# MAPS_PROVIDER: none | google | mapbox | osm
MAPS_PROVIDER=none
GOOGLE_MAPS_API_KEY=
MAPBOX_API_KEY=

# =====================================
# Scripts (optional helpers for seeding via npm)
# Pass IDs at runtime: npm run seed:messages -- --users=ID1,ID2
# or: npm run seed:planning -- --owner=ID --members=ID2,ID3
# USERS=
# OWNER=
# MEMBERS=
